@model TransportationArea.DBProviderService.Data.Area
@{
    ViewData["Title"] = "CreateArea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Редактирование Зоны</h1>
<form asp-controller="Area" method="post" asp-action="ChangeArea" asp-route-id="@Model.Id">
    <div class="row form-group">
        <div class="col-md-4 mb-3">
                    <div class="input-group ">
                        <label asp-for="Name" class="input-group-text"></label>
                        <input asp-for="Name" type="text" class="form-control">
                        <div><span asp-validation-for="Name" style="max-width: 150px;"></span></div> 

                    </div>
                    <div class="input-group ">
                <label asp-for="Price" class="input-group-text"></label>
                <input asp-for="Price" type="number" data-decimals="2" min="0" step="0.01" class="form-control">
                <div><span asp-validation-for="Price" style="max-width: 150px;"></span></div>
                     </div>
            <br />
            <button type="submit" class="btn btn-outline-primary">Сохранить</button>
        </div>
        
    </div>

</form>







